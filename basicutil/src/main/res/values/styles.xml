<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MultipleStatusView"/>

    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/normal_color1</item> <!--默认显示下划线的颜色-->
        <item name="colorControlActivated">@color/tool_bar_right</item><!--点击后下划线的颜色-->
        <item name="colorPrimary">@color/tool_bar_right</item>
    </style>

</resources>