<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:background="@android:color/white"
    app:cardElevation="@dimen/dp_2"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@+id/imvHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imvHead"
            app:layout_constraintTop_toTopOf="@+id/imvHead"
            app:layout_constraintVertical_bias="0.097"
            tools:text="李狗蛋"
            />

        <ImageView
            android:id="@+id/imvHead"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars"
            />

        <TextView
            android:id="@+id/tvChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.968"
            app:layout_constraintStart_toEndOf="@+id/tvAuthor"
            app:layout_constraintTop_toTopOf="@+id/tvAuthor"
            tools:text="基础知识"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_20"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imvHead"
            app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
            app:layout_constraintVertical_bias="0.07"
            tools:text="反思|Android View机制设计与实现：布局流程"
            />

        <ImageView
            android:id="@+id/imvStart"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/imvHead"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@android:drawable/star_off"
            tools:ignore="ContentDescription"
            />

        <TextView
            android:id="@+id/tvStartNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_0_5"
            android:layout_marginEnd="@dimen/dp_8"
            android:textSize="@dimen/sp_11"
            app:layout_constraintBottom_toBottomOf="@+id/imvStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imvStart"
            app:layout_constraintTop_toTopOf="@+id/imvStart"
            tools:text="100"
            />

        <ImageView
            android:id="@+id/imvNice"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintBottom_toBottomOf="@+id/imvStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toEndOf="@+id/tvStartNum"
            app:layout_constraintTop_toTopOf="@+id/imvStart"
            app:srcCompat="@android:drawable/star_off"
            tools:ignore="ContentDescription"
            />

        <TextView
            android:id="@+id/tvNiceNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_0_5"
            android:layout_marginEnd="@dimen/dp_8"
            android:textSize="@dimen/sp_11"
            app:layout_constraintBottom_toBottomOf="@+id/imvNice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imvNice"
            app:layout_constraintTop_toTopOf="@+id/imvNice"
            tools:text="100"
            />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="0dp"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@+id/tvNiceNum"
            app:layout_constraintEnd_toEndOf="@+id/tvChapter"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvNiceNum"
            app:layout_constraintTop_toTopOf="@+id/tvNiceNum"
            app:layout_constraintVertical_bias="1.0"
            tools:text="2019-08-15 11:30"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>